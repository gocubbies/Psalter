<resources>

    <attr name="toolbarStyle" format="reference" />
    <attr name="secondaryFabStyle" format="reference" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="buttonStyle">@style/Button</item>
    </style>
    .

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ToolbarPopup">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="PagerTitleStrip">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorLightText</item>
    </style>

    <style name="Button.Selected">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <!-- Light application theme. -->
    <style name="AppTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="toolbarStyle">@style/Toolbar.Light</item>
        <!--<item name="buttonStyle">@style/Button.Light</item>-->
        <item name="secondaryFabStyle">@style/SecondaryFabLight</item>
    </style>

    <style name="Toolbar.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ToolbarPopup.Light</item>
    </style>

    <style name="ToolbarPopup.Light">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="SecondaryFabLight">
        <item name="android:tint">@color/colorAccent</item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <!--<style name="Button.Light">-->
        <!--<item name="android:textColor">@color/colorAccent</item>-->
    <!--</style>-->

    <!-- Dark application theme. -->
    <style name="AppTheme.Dark">
        <item name="colorPrimary">@color/colorPrimaryInverse</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkInverse</item>
        <item name="colorAccent">@color/colorAccentInverse</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="toolbarStyle">@style/Toolbar.Dark</item>
        <!--<item name="buttonStyle">@style/Button.Dark</item>-->
        <item name="secondaryFabStyle">@style/SecondaryFabDark</item>

        <item name="android:textColor">@color/colorLightText</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#616161</item>
    </style>

    <style name="Toolbar.Dark" parent="Theme.AppCompat">
        <item name="android:background">@color/colorPrimaryInverse</item>
        <item name="android:textColor">#fff</item>
        <item name="popupTheme">@style/ToolbarPopup.Dark</item>
    </style>

    <style name="ToolbarPopup.Dark">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--<style name="Button.Dark">-->
        <!--<item name="android:textColor">@color/colorLightText</item>-->

    <!--</style>-->

    <style name="SecondaryFabDark">
        <item name="android:tint">@color/colorUnselectedInverse</item>
    </style>

    <style name="AppTheme.Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Light.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
